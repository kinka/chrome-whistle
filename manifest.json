{
  "manifest_version": 2,

  "name": "Whistle",
  "description": "This extension redirect static resources to local files",
  "version": "1.0",
  "icons": {
    "16": "icon-16.png",
	"128": "icon-128.png"
  },
  "browser_action": {
    "default_icon": "icon-16.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
		"*://*/",
		"tabs",
		"cookies",
		"webRequest",
		"webRequestBlocking",
		"management"
  ]
}
