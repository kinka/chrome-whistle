{
  "manifest_version": 2,

  "name": "Whistle",
  "description": "This extension redirect static resources to local files",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
		"*://*/",
		"tabs",
		"cookies",
		"webRequest",
		"webRequestBlocking"
  ]
}
